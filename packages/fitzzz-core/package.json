{
  "name": "@fitzzz/core",
  "version": "0.1.0",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist",
    "./styles.css": "./dist/styles.css"
  },
  "license": "MIT",
  "scripts": {
    "build": "tsup src/index.tsx --format esm,cjs --dts --external react && tailwindcss -i ./src/styles.css -o ./dist/styles.css",
    "dev": "concurrently \"tsup src/index.tsx --format esm,cjs --dts --external react --watch\" \"tailwindcss -i ./src/styles.css -o ./dist/styles.css --watch\"",
    "test": "echo 'Library Test'",
    "lint": "eslint \"src/**/*.ts*\"",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist && rm -rf ../fitzzz-config/node_modules"
  },
  "devDependencies": {
    "@fitzzz/config": "*",
    "@types/react": "^17.0.37",
    "@types/react-dom": "^17.0.11",
    "class-variance-authority": "^0.2.4",
    "concurrently": "^7.2.2",
    "eslint": "^7.32.0",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "react": "^18.2.0",
    "tailwindcss": "^3.1.5",
    "tsup": "^6.1.3",
    "typescript": "^4.5.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
