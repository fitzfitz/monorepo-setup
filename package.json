{
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "reset:all": "turbo run clean && rm -rf node_modules rm yarn.lock",
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "start": "turbo run start",
    "test": "turbo run test",
    "style:all": "npm run style:lint && npm run style:prettier-check",
    "style:lint": "turbo run lint",
    "style:prettier-check": "prettier --check '**/*.{ts,tsx,md}'",
    "style:prettier-write": "prettier --write '**/*.{ts,tsx,md}'",
    "prepare": "husky install",
    "publish-packages": "turbo run build lint test && changeset version && changeset publish"

  },
  "devDependencies": {
    "@changesets/cli": "^2.22.0",
    "@fitzzz/config": "*",
    "eslint": "^7.32.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.11",
    "turbo": "latest"
  },
  "version": "1.0.0",
  "lint-staged": {
    "apps/**/*.{js,ts,jsx,tsx}": [
      "eslint --fix"
    ],
    "packages/fitzzz-core/**/*.{js,ts,jsx,tsx}": [
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  }
}
